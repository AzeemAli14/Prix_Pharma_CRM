<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Activities.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:weightSum="11">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Register Here"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="30sp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/per"
                android:hint="Full Name"
                android:id="@+id/editname"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="First Name"
                app:met_primaryColor="@color/colorPrimary"
                app:met_underlineColor="@color/colorPrimary" />



            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/elog"
                android:hint="Email"
                android:id="@+id/editemail"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Email"
                app:met_primaryColor="@color/colorPrimary"
                app:met_underlineColor="@color/colorPrimary" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lock"
                android:hint="Password"
                android:id="@+id/editpass"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Password"
                app:met_primaryColor="@color/colorPrimary"
                app:met_underlineColor="@color/colorPrimary" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phn"
                android:hint="Phone Number"
                android:id="@+id/editnum"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Phone Number"
                app:met_primaryColor="@color/colorPrimary"
                app:met_underlineColor="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:paddingTop="3dp"
                android:text="Date of Birth:"
                android:textColor="#000"
                android:textSize="20dp"

                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editbirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-70dp"
                android:drawableLeft="@drawable/event"
                android:hint="dd / mm / yy"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="15dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="dd / mm / yy"
                app:met_primaryColor="@color/colorPrimary"
                app:met_underlineColor="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:paddingTop="3dp"
                android:text="Designation:"
                android:textColor="#000"
                android:textSize="20dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editdes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-70dp"
                android:hint="Choose to select"
                android:drawableLeft="@drawable/ic_designation_black_24dp"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="15dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Choose to select"
                app:met_primaryColor="@color/colorPrimary"
                app:met_underlineColor="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:paddingTop="3dp"
                android:text="Team Range:"
                android:textColor="#000"
                android:textSize="20dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editteam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="-70dp"
                android:hint="Choose to select"
                android:drawableLeft="@drawable/ic_team_black_24dp"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="15dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Choose to select"
                app:met_primaryColor="@color/colorPrimary"
                app:met_underlineColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="end"
                android:text="Already have account ?"
                android:textColor="#355DE6" />

            <Button
                android:id="@+id/btnsign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="110dp"
                android:background="@drawable/ripple"
                android:text="Signup"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>